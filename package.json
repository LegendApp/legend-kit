{
  "name": "@legendapp/kit",
  "version": "0.1.8",
  "description": "A modular toolkit for Legend",
  "sideEffects": false,
  "private": false,
  "type": "module",
  "bin": {
    "legend-kit": "cli.js"
  },
  "files": [
    "cli.js"
  ],
  "scripts": {
    "build": "bun run scripts/build.ts",
    "build-cli": "bun run scripts/build-cli.ts",
    "validate": "bun run scripts/validate.ts",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "publish-cli": "bun run build-cli && cd dist && npm publish"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "comment-json": "^4.2.5",
    "env-paths": "^3.0.0",
    "figures": "^6.1.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink": "^5.1.1",
    "open": "^10.1.0",
    "react": "^18.3.1",
    "systeminformation": "^5.25.11"
  },
  "devDependencies": {
    "@legendapp/state": "^3.0.0-beta.29",
    "@types/node": "^18.11.9",
    "@types/react": "^19.0.10",
    "@types/react-native": "^0.73.0",
    "prettier": "^3.1.0",
    "react-native": "^0.78.0",
    "typescript": "^4.9.3",
    "zod": "^3.22.4"
  },
  "keywords": [
    "legend",
    "legend-kit",
    "legend-cli",
    "legend-state",
    "legend-list"
  ]
}
