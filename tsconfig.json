{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "scripts/build.ts",
    "src/types.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
